@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">
        <h1 class="display-4">Cowboy Cafe</h1>
        <p>
            We at Cowboy Cafe are proud to bring you authentic trail meals
            from the American West. Shake off the dust on your boots and sake
            your thirst with one of our old-fashioned hand-jerked sodas. Dip
            your Pan de Campo into a bowl of beans. Or conquer the the mighty
            Texas Triple Burger! You’ve had a hard ride - so take it easy
            with us.
        </p>
        <hr />
        <form id="search-database">
            <div id="search">
                <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
                <input type="submit" value="Search">
            </div>

            <div id="filters">

                <h4>Type</h4>
                @foreach (String types in CowboyCafe.Data.Menu.EntreeSideDrink) {
                    <label>
                        <input type="checkbox" name="Types" value="@types" checked="@Model.Types.Contains(types)" />
                        @types
                    </label>
                }

                <h4>Price</h4>
                <div>
                    Between
                    <input name="PriceMin" type="number" min="0" max="20" step="0.25" placeholder="min" />
                    and
                    <input name="PriceMax" type="number" min="0" max="20" step="0.25" placeholder="max" />
                </div>

                <h4>Calories</h4>
                <div>
                    Between
                    <input name="CaloriesMin" type="number" min="0" max="1000" step="1" placeholder="min" />
                    and
                    <input name="CaloriesMax" type="number" min="0" max="1000" step="1" placeholder="max" />
                </div>

            </div>
            <ul class="search-list">
                @foreach (CowboyCafe.Data.IOrderItem item in @Model.MenuItems) {
                    <li>
                        <div class="Name">
                            <h3>@item.ToString()</h3>
                            <div class="price-and-calories">
                                <h4>Price:</h4>
                                @item.Price
                                <h4>Calories:</h4>
                                @item.Calories
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </form>
            <hr />
            <h1>All Avaliable Items</h1>
            <hr />
            <h2>Entrees</h2>
            <ul>
                @foreach (CowboyCafe.Data.IOrderItem item in CowboyCafe.Data.Menu.Entrees) {
                    <li>
                        <div class="Name">
                            <h3>@item.ToString()</h3>
                            <div class="price-and-calories">
                                <h4>Price:</h4>
                                @item.Price
                                <h4>Calories:</h4>
                                @item.Calories
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <hr />
            <h2>Sides</h2>
            <ul>
                @foreach (CowboyCafe.Data.Side item in CowboyCafe.Data.Menu.Sides) {
                    <li>
                        <div class="Name">
                            <h3>@item.ToString()</h3>
                            <div class="price-and-calories">
                                <h4>Price:</h4>
                                @item.Price
                                <h4>Calories:</h4>
                                @item.Calories
                            </div>
                        </div>
                    </li>
                }
            </ul>
            <hr />
            <h2>Drinks</h2>
            <ul>
                @foreach (CowboyCafe.Data.Drink item in CowboyCafe.Data.Menu.Drinks) {
                    <li>
                        <div class="Name">
                            <h3>@item.ToString()</h3>
                            <div class="price-and-calories">
                                <h4>Price:</h4>
                                @item.Price
                                <h4>Calories:</h4>
                                @item.Calories
                            </div>
                        </div>
                    </li>
                }
            </ul>

    </div>
